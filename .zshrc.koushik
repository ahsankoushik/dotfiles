
export EDITOR='nvim'



alias y="yazi"
alias z="zoxide"



# adding for lazygit
alias vim='nvim --listen /tmp/nvim-server.pipe'


alias tl="tmux ls"
alias tn="tmux new -s $1"
alias tx="tmux kill-session -t $1"
alias ts="tmux switch -t $1"
ta () {
    if [ -n "$1" ]; then
        tmux attach -t "$1"
    else
        tmux attach
    fi
}


alias lg="lazygit"
